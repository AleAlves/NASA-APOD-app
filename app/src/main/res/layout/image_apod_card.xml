<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingTop="1dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progressbar_loading_fav_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="34dp"
                    android:foregroundGravity="center_vertical"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/imageview_apod_image"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:padding="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/wyoming" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_apod_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|center"
                android:gravity="center"
                android:maxLines="1"
                android:paddingTop="10dp"
                android:text="2017 August 22 "
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textview_apod_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:text="A Total Solar Eclipse over Wyoming"
                android:textSize="12dp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/linear_layout_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="15dp">

                <ImageButton
                    android:id="@+id/image_button_start_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_star_border_black_24dp" />

                <ImageButton
                    android:id="@+id/image_button_start_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_star_border_black_24dp" />

                <ImageButton
                    android:id="@+id/image_button_start_3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_star_border_black_24dp" />

                <ImageButton
                    android:id="@+id/image_button_start_4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_star_border_black_24dp" />

                <ImageButton
                    android:id="@+id/image_button_start_5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_star_border_black_24dp" />

                <ImageButton
                    android:id="@+id/button_wallpaper_apod"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_image_black_24dp"
                    android:textColor="#000" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingTop="10dp">

            <ImageButton
                android:id="@+id/button_delete_apod"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@null"
                android:foreground="?attr/selectableItemBackground"
                android:scaleType="fitXY"
                android:src="@drawable/ic_delete_forever_black_24dp"
                android:textColor="#000" />
        </LinearLayout>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:background="@null" />
    </GridLayout>
</FrameLayout>