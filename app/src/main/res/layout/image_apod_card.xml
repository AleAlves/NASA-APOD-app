<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:paddingBottom="1dp"
    android:paddingTop="1dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center|top"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progressbar_loading_fav_image"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:foregroundGravity="center_vertical"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="34dp" />

                <ImageView
                    android:id="@+id/imageview_apod_image"
                    android:layout_width="90dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/wyoming"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/textview_apod_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="2017 August 22 "
                android:textSize="14dp"
                android:gravity="center"
                android:layout_gravity="top|center"
                android:paddingTop="10dp"/>

            <TextView
                android:id="@+id/textview_apod_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:maxLines="1"
                android:text="A Total Solar Eclipse over Wyoming"
                android:textSize="12dp"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:background="@null" />

            <Button
                android:id="@+id/button_delete_apod"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="5dp"
                android:text="X"
                android:textColor="#000" />
        </FrameLayout>
    </FrameLayout>
</LinearLayout>