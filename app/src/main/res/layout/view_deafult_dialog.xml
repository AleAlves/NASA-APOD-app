<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_textview_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Title"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone"
        android:textColor="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_textview_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A maioria dos apps precisa reconhecer a identidade do usuário. Ter essa informação permite que um app salve os dados do usuário na nuvem com segurança e forneça a mesma experiência personalizada em todos os dispositivos do usuário."
        android:textSize="16sp"
        android:padding="15dp"
        android:layout_margin="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_textview_title" />

</androidx.constraintlayout.widget.ConstraintLayout>