<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingBottom="1dp"
    android:paddingTop="1dp">

    <GridLayout
        android:id="@+id/gridlayout_top_rated"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:orientation="horizontal"
        android:foreground="?attr/selectableItemBackground">

        <GridLayout android:layout_columnWeight="0">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ProgressBar
                        android:id="@+id/progressbar_loading_top_rated_image"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="34dp"
                        android:foregroundGravity="center_vertical"
                        android:visibility="visible" />

                    <ImageView
                        android:id="@+id/imageview_top_rated_apod_image"
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/wyoming"
                        android:foreground="?attr/selectableItemBackground"/>
                </RelativeLayout>
            </LinearLayout>
        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_columnWeight="90"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textview_top_rated_apod_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingTop="10dp"
                    android:text="Astronomic picture of the day "
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/textview_top_rated_apod_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:paddingTop="5dp"
                    android:text="2017 August 22 "
                    android:textSize="8dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear_layout_top_rated_stars"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="25dp">

                <ImageButton
                    android:id="@+id/image_button_top_rated_start_1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_star_border_black_24dp" />

                <ImageButton
                    android:id="@+id/image_button_top_rated_start_2"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_star_border_black_24dp" />

                <ImageButton
                    android:id="@+id/image_button_top_rated_start_3"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_star_border_black_24dp" />

                <ImageButton
                    android:id="@+id/image_button_top_rated_start_4"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_star_border_black_24dp" />

                <ImageButton
                    android:id="@+id/image_button_top_rated_start_5"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@null"
                    android:foreground="?attr/selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_star_border_black_24dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/textview_apod_rates_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="Votes: "
                        android:textSize="8dp" />

                    <TextView
                        android:id="@+id/textview_apod_rates_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="99999"
                        android:textSize="8dp" />
                </LinearLayout>
            </LinearLayout>
        </GridLayout>

        <GridLayout
            android:layout_columnWeight="0"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/textview_apod_index"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="Â°" />
            </LinearLayout>
        </GridLayout>
    </GridLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:background="@null" />
    </GridLayout>
</FrameLayout>